bindsym $mod+Shift+e exec --no-startup-id "$HOME/.config/rofi/scripts/powermenu.sh"

# Power Profiles menu switcher
bindsym $mod+Shift+p exec --no-startup-id "$HOME/.config/rofi/scripts/powerprofiles.sh"

